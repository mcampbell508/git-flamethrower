{
    "name": "theshopworks/git-review",
    "description": "A tool to improve development workflow with Git",
    "keywords": ["git", "workflow", "laravel-zero"],
    "homepage": "https://github.com/theshopworks/git-review",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Campbell",
            "email": "matt.campbell@theshopworks.com",
            "homepage": "http://mcampbell508.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "laravel-zero/framework": "5.6.*"
    },
    "require-dev": {
        "mockery/mockery": "dev-master@dev",
        "phpunit/phpunit": "^7.0",
        "friendsofphp/php-cs-fixer": "2.12",
        "phpstan/phpstan": "^0.9.2",
        "squizlabs/php_codesniffer": "^3.2",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "jakub-onderka/php-console-highlighter": "^0.3.2"
    },
    "autoload": {
        "psr-4": {
            "Shopworks\\Git\\Review\\": [
                "app"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shopworks\\Tests\\": ["tests"]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "ext-posix": "0"
        }
    },
    "bin": [
        "git-review"
    ],
    "scripts": {
        "test": [
            "php vendor/bin/phpunit --color=always",
            "php vendor/bin/parallel-lint app bootstrap/app.php config tests .php_cs.dist",
            "php vendor/bin/phpstan analyse app bootstrap/app.php config tests .php_cs.dist -c phpstan.neon -l 7",
            "php vendor/bin/phpcs --colors app bootstrap/app.php config tests .php_cs.dist",
            "php vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --dry-run --using-cache=no"
        ]
    }
}
